<!-- Shop products -->
<section>
	<div class="container">

		<div class="heading m-b-40">
			<h4>Öne Çıkan Ürunler </h4>
		</div>

		<!--Product list-->
		<div class="shop">
			<div class="row">
				@foreach (var item in (IEnumerable<Product>)ViewBag.Products)
				{



					<div class="col-md-3">
						<div class="product">
							<div class="product-image">
								<a href="#">
									<img alt="@item.Name" src="~/Uploads/@item.Photo">
								</a>
								<a href="#">
									<img alt="@item.Name" src="~/Uploads/@item.Photo">
								</a>
								@if (item.IsNew == true)
								{
									<span class="product-new">YENİ</span>
								}
								<div class="product-overlay">
									<a href="shop-product-ajax-page.html" data-lightbox="ajax">Hızlı Bakış</a>
								</div>
							</div>

							<div class="product-description">
								<div class="product-category">@item.Category?.Name</div>
								<div class="product-title">
									<h3><a href="#">@item.Name</a></h3>
								</div>
								<div class="product-price">
									<ins>₺@string.Format("{0:#,###.##}", item.Price)</ins>
								</div>

							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>
