<!-- end: Header -->
<!-- Inspiro Slider -->
<div id="slider" class="inspiro-slider arrows-large arrows-creative dots-creative" data-height-xs="360" data-autoplay-timeout="2600" data-animate-in="fadeIn" data-animate-out="fadeOut" data-items="1" data-loop="true" data-autoplay="true">
	@foreach (var item in (IEnumerable<Slide>)ViewBag.Slides)
	{
		<!-- Slide 1 -->
		<div class="slide" style="background-image:url('@item.Image');">
			<div class="container">
				<div class="slide-captions text-right">

					<!-- Captions -->
					<h2 class="text-large">@item.Name</h2>
					<a class="btn btn-light" href="#">Shop Now</a>
					<a class="btn btn-light btn-outline" href="'@item.Url">Şimdi başvur</a>
					<!-- end: Captions -->
				</div>
			</div>
		</div>
		<!-- end: Slide 1 -->

	}
</div>
<!--end: Inspiro Slider -->
